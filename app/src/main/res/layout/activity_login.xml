<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context=".activity.MainActivity">

    <ImageView
        android:id="@+id/userImg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="50dp"
        android:src="@drawable/user"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <EditText
        android:background="@color/white"
        android:id="@+id/userNameEdt"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/userImg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:hint="Enter User Name"
        android:textSize="24dp"
        android:layout_width="200dp"
        android:layout_height="40dp"/>
    <ImageView
        android:id="@+id/passImg"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@+id/userImg"
        android:src="@drawable/key"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <EditText
        android:id="@+id/passwordEdt"
        android:background="@color/white"
        app:layout_constraintLeft_toRightOf="@+id/passImg"
        app:layout_constraintTop_toBottomOf="@+id/userNameEdt"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:hint="Enter Password"
        android:textSize="24dp"
        android:inputType="textPassword"
        android:layout_width="200dp"
        android:layout_height="40dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/backBtn"
        app:layout_constraintTop_toBottomOf="@+id/passwordEdt"
        android:layout_marginTop="20dp"
        android:text="Đăng Nhập"
        android:background="#F44336"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backBtn"
        app:layout_constraintLeft_toRightOf="@+id/loginBtn"
        app:layout_constraintTop_toBottomOf="@+id/passwordEdt"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:text="Thoát"
        android:textColor="@color/white"
        android:background="#F44336"
        android:gravity="center"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        app:layout_constraintTop_toBottomOf="@+id/loginBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:background="#F44336"
        android:text="Về Chúng Tôi"
        android:textColor="@color/white"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>